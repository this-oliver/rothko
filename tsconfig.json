{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "ignoreDeprecations": "5.0", // Ignore deprecation warnings
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@/*": [
        "package/*"
      ]
    }
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "package/**/*"
  ]
}
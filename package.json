{
  "name": "rothko-js",
  "description": "Generate colors and visual patterns based on text-based input",
  "repository": "this-oliver/rothko-js",
  "version": "0.4.4",
  "main": "./lib/rothko-js.umd.js",
  "scripts": {
    "dev": "vite",
    "build:lib": "npm run clear && vue-tsc --noEmit && vite build --mode lib",
    "build:demo": "npm run clear && vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint --ext .ts,.vue --fix .",
    "bump": "npx fistbump",
    "clear": "rm -rf dist && rm -rf lib"
  },
  "dependencies": {
    "p5": "^1.6.0",
    "vue": "^3.2.47",
    "vuetify": "^3.2.1"
  },
  "devDependencies": {
    "@types/node": "^18.14.2",
    "@types/p5": "^1.6.2",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.34.0",
    "eslint-plugin-vue": "^9.9.0",
    "fist-bump": "^1.1.0",
    "lint-staged": "^13.2.2",
    "simple-git-hooks": "^2.8.1",
    "typescript": "~4.8.4",
    "vite": "^4.1.4",
    "vite-plugin-dts": "^2.3.0",
    "vue-tsc": "^1.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "npm run lint"
  }
}
